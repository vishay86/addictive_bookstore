<%= simple_form_for(@book,html:{class: 'form-signin'}) do |f| %>
  <%= f.error_notification %>

    <%= f.input :name, required: true %>
    <%= f.input :author, required: true %>
    <%= f.input :description, required: true, rows: 5 %>
    <%= f.input :price, required: true %>
    <%= f.input :availability, required: true %>
  
  
    <%= f.button :submit, class: 'btn btn-primary btn-lg, btn-block' %>

<% end %>
